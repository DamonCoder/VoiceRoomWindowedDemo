<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ltd.maimeng.windowedvoiceroom.widget.BreatheView
        android:id="@+id/bv_float_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        app:color_breathe="@color/color_F7F9FE"
        app:color_core="@color/color_FFFFFF"
        app:width_breathe="10dp"
        app:width_core="35dp" />

    <ltd.maimeng.core.ui.widget.CircleImageView
        android:id="@+id/iv_float_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_color="@color/color_FFFFFF"
        app:civ_border_width="3dp" />

</RelativeLayout>